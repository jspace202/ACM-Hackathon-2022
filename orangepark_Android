import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  build(BuildContext context) {
    return MaterialApp(
      title: 'flutter demo',
      home: HomeScreen(),
    );
  }
}

class HomeScreen extends StatelessWidget {
  //const MyApp({Key? key}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(
          backgroundColor: Colors.deepOrange,
          title: const Center(
            child: Text(
              'Orange Park',
              style: TextStyle(fontSize: 50.0),
              ),
          ),
        ),
        body: Column(
          crossAxisAlignment: CrossAxisAlignment.center,
          mainAxisAlignment: MainAxisAlignment.spaceEvenly,
          children: [
            const Text(
              ' Have a few extra parking spaces?',
              style: TextStyle(fontSize: 27.0),
            ),
            Container(
              child: ElevatedButton(
                style: ButtonStyle(backgroundColor: MaterialStateProperty.all<Color>(Colors.deepOrange)),
                child: const Text(
                  'RENT',
                  style: TextStyle(fontSize: 35.0),
                  ),
                onPressed: () {
                  _navigateToRentScreen(context);
                },
              ),
              margin: const EdgeInsets.all(0),
              height: 100,
              width: 300,
            ),
            const Text(
              'Need a place to park?',
              style: TextStyle(fontSize: 27.0),
              ),
            Container(
              child: ElevatedButton(
                child: const Text(
                  'PARK',
                  style: TextStyle(fontSize: 35.0),
                ),
                style: ButtonStyle(backgroundColor: MaterialStateProperty.all<Color>(Colors.deepOrange)),
                onPressed: () {
                  _navigateToParkScreen(context);
                }
            ),
              margin: const EdgeInsets.all(0),
              height: 100,
              width: 300,
            ),
          ],
        ),
      ),
    );
  }
}

//The method below and subsequent class render a new screen when "RENT" is pressed
void _navigateToRentScreen(BuildContext context) {
  Navigator.of(context).push(MaterialPageRoute(builder: (context) => RentScreen()));
}

class RentScreen extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text('New Screen')),
      body: Center(
        child: Text(
          'This is a new screen',
          style: TextStyle(fontSize: 25.0),
      ),
    ),
    );
  }
}


//The method below and subsequent class render a new screen when "PARK" is pressed
void _navigateToParkScreen(BuildContext context) {
  Navigator.of(context).push(MaterialPageRoute(builder: (context) => ParkScreen()));
}

class ParkScreen extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text('Screen')),
      body: Center(
        child: Text(
          'This is a new screen',
          style: TextStyle(fontSize: 25.0),
      ),
    ),
    );
  }
}
